#u16>>pc or group name

# install app
ansible u16 -b -m apt -a "name=mc state=present"
#remove app
ansible u16 -b -m apt -a "name=mc state=absent"

#update ubuntu
ansible u16 -b -B 600 -a "apt -y update"
